#:kivy 1.8.0
#:set white (1, 1, 1)


<WhiteBoxLayout@BoxLayout>:
    orientation: "vertical"
    canvas:
        Color:
            rgb: white 
        Rectangle:
            pos: self.pos
            size: self.size


<SleepScreen>:
    WhiteBoxLayout:
        id: sleep

        Button:
            id: toggle_rec_btn
            text: "Start"
        Button:
            text: 'Statistics'
            on_press: root.manager.current = 'statistics'
        Button:
            text: "Settings"
            on_press: root.manager.current = 'settings'


<StatisticsScreen>:
    WhiteBoxLayout:
        id: statistics


<SettingsScreen>:
    WhiteBoxLayout:
        id: settings
